
@model List<prjMvcDemo.Models.CCustomer>
@{
    ViewBag.Title = "List";
}

<h2>客戶資料一覽表</h2>
<div>
    @using (Html.BeginForm())
    {
        @:關鍵字 @Html.TextBox("txtKeyword") <input type="submit" value="查詢" />
    }
</div>
<p>
    <a href="~/Customer/New" class="btn btn-primary">+新增客戶</a>
</p>
<div>
    <table class="table table-hover">
        <tr>
            <td>序</td>
            <td>姓名</td>
            <td>電話</td>
            <td>電子郵件</td>
            <td>地址</td>
            <td>密碼</td>
            <td>修改</td>
            <td>刪除</td>
        </tr>
        @{
            int count = 0;
            foreach (prjMvcDemo.Models.CCustomer c in Model)
            {
                count++;
                <tr>
                    <td>@count</td>
                    <td>@c.fName</td>
                    <td>@c.fPhone</td>
                    <td>@c.fEmail</td>
                    <td>@c.fAddress</td>
                    <td>@c.fPassword</td>
                    <td>
                        @Html.ActionLink("編輯", "Edit", "Customer", new { id = c.fId },
                       new { @class="btn btn-success"})
                    </td>
                    <td>
                        @Html.ActionLink("刪除", "Delete", "Customer", new { id = c.fId },
                   new { onclick = "return confirm('確定要刪除嗎?')",Class="btn btn-danger" })
                    </td>
                </tr>
            }
        }
    </table>
</div>
