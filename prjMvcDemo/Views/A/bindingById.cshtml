@model prjMvcDemo.Models.CCustomer
@{
    ViewBag.Title = "showById";
    string photo = "anonymous.jpg";
    if (Model!= null)
    {
        photo = Model.fId + ".jpg";
    }
}
<h2>繫結範例</h2>
<p>
    <div>
        <img src="~/Images/@photo" width="200" height="160" />
    </div>
    @{
        if (Model != null)
        {
            <h3>@Model.fName</h3><br />
            @:電話：@Model.fPhone/@Model.fEmail
        }
        else
        {
            <h3>查無資料</h3>
        }
    }

</p>